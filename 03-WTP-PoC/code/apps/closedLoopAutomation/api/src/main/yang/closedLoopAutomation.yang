module closedLoopAutomation {
    yang-version 1;
    namespace "urn:opendaylight:params:xml:ns:yang:closedLoopAutomation";
    prefix "closedLoopAutomation";

    revision "2016-09-19" {
        description "Initial revision of closedLoopAutomation model";
    }

    rpc start {
        output {
            leaf status {
                type string;
            }
        }
    }

    rpc save-timer {
        input {
            leaf value {
                 type int32;
            }

            leaf enabled {
                  type boolean;
            }
        }

        output {
            leaf status {
                type string;
            }
        }
    }

     rpc read-timer {
        output {
             leaf value {
                 type int32;
             }

             leaf enabled {
                  type boolean;
             }
        }
     }

     container timer-setting {
         config true;

         leaf value {
             type int32;
         }

         leaf enabled {
              type boolean;
         }
     }
}
